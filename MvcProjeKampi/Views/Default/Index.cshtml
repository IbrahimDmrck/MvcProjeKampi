@using EntityLayer.Concrete
@model List<Content>

<br />
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div style="border-radius:10px;" class="wrapper bg-lightblue">
        <section class="content">
            <div class="container-fluid">

                <!-- Timelime example  -->
                <div class="row">
                    <div class="col-md-12">
                        <!-- The time line -->
                        <div class="timeline">
                            @foreach (var item in Model)
                            {


                                <!-- timeline time label -->
                                <div class="time-label">
                                    <span class="bg-gradient-lime">@(((DateTime)item.ContentDate).ToString("dd-MM-yy"))</span>
                                </div>
                                <!-- /.timeline-label -->
                                <!-- timeline item -->
                                <div>
                                    <i class="fas fa-comment bg-yellow"></i>
                                    <div class="timeline-item">
                                        <h3 class="timeline-header bg-gradient-gray-dark">
                                            <a href="#">
                                                @item.Writer.WriterName @item.Writer.WriterSurName - <span class="badge bg-fuchsia">@item.Heading.HeadingName </span>
                                            </a>
                                        </h3>
                                        <div class="timeline-body">
                                            @item.ContentValue
                                        </div>
                                    </div>
                                </div>
                                <!-- END timeline item -->
                            }
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
            </div>
            <!-- /.timeline -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
</body>
</html>
