@model EntityLayer.Concrete.Writer
@{
    ViewBag.Title = "WriterProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<script language="javascript">
    function Success() {
        confirm("Kaydetme işlemi başarılı")
    }
</script>
<h2 style="width:800px;"  class="pt-4"><span style="width:500px;border-radius:5px;background-color:darkgrey" class="pl-3 pr-5 text-lightblue">Yazar Bilgileri</span></h2>
<br />
        @using (Html.BeginForm("WriterProfile", "WriterPanel", FormMethod.Post))
        {

            <div style="border:1px solid black;width:auto;height:300px;background-color:aliceblue;" class="form-group">

                @Html.HiddenFor(x => x.WriterID, new { @class = "form-control" })
                <br />
                @Html.Label("Profil Fotoğrafı :", new { @style = "float:left;margin-left:10px;margin-top:20px;text-decoration:underline;" })
                @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control", @style = "width:200px;float:left;margin-top:20px;" })

                @Html.Label("Yazar Adı :", new { @style = "float:left;margin-left:20px;margin-top:20px;text-decoration:underline;" })
                @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control", @style = "width:330px;float:left;margin-left:30px;margin-top:20px;" })
                @Html.ValidationMessageFor(x => x.WriterName, "", new { @style = "color:red  " })

                @Html.Label("Yazar Soyadı :", new { @style = "float:left;margin-left:20px;margin-top:20px;text-decoration:underline;" })
                @Html.TextBoxFor(x => x.WriterSurName, new { @class = "form-control", @style = "width:350px;float:left;margin-top:20px;" })
                @Html.ValidationMessageFor(x => x.WriterSurName, "", new { @style = "color:red" })

                @Html.Label("Unvan :", new { @style = "float:left;margin-left:10px;margin-top:20px;text-decoration:underline;" })
                @Html.TextBoxFor(x => x.writerTitle, new { @class = "form-control", @style = "width:200px;float:left;margin-left:60px;margin-top:20px;" })
                @Html.ValidationMessageFor(x => x.writerTitle, "", new { @style = "color:red" })



                @Html.Label("Yazar E-posta :", new { @style = "float:left;margin-left:20px;margin-top:20px;text-decoration:underline;" })
                @Html.TextBoxFor(x => x.WriterEmail, new { @class = "form-control", @style = "width:330px;float:left;margin-top:20px;" })
                @Html.ValidationMessageFor(x => x.WriterEmail, "", new { @style = "color:red" })
                <br />

                @Html.Label("Şifre :", new { @style = "float:left;margin-left:20px;margin-top:20px;text-decoration:underline;" })
                @Html.TextBoxFor(x => x.writerPassword, new { @class = "form-control", @style = "width:350px;float:left;margin-left:55px;margin-top:20px;" })
                @Html.ValidationMessageFor(x => x.writerPassword, "", new { @style = "color:red" })

                @Html.Label("Yazar Hakkında :", new { @style = "float:left;margin-left:10px;margin-top:20px;text-decoration:underline;" })
                @Html.TextAreaFor(x => x.WriterAbout, 3, 30, new { @class = "form-control", @style = "width:650px;float:left;margin-top:20px;" })
                @Html.ValidationMessageFor(x => x.WriterAbout, "", new { @style = "color:red" })
                <br /><br /><br />
                <button onclick="Success()" style="float:right;position:relative;margin-top:100px;margin-right:20px;" class="btn btn-success">Değişiklikleri Kaydet</button><br /><br />
            </div>
        }
