@using EntityLayer.Concrete
@model List<Content>
@{
    ViewBag.Title = "MyContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<br />
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini" >
    <!-- Site wrapper -->
    <div style="border-radius:10px;" class="wrapper bg-gradient-lightblue "><br />
        <section class="content">
            <div class="container-fluid">

                <!-- Timelime example  -->
                <div class="row">
                    <div class="col-md-12">
                        <!-- The time line -->
                        <div class="timeline">
                            @foreach (var item in Model)
                            {


                                <!-- timeline time label -->
                                <div class="time-label">
                                    <span class="bg-success">@(((DateTime)item.ContentDate).ToString("dd-MM-yy"))</span>
                                </div>
                                <!-- /.timeline-label -->
                                <!-- timeline item -->
                                <div>
                                    <i class="fas fa-comment bg-yellow"></i>
                                    <div class="timeline-item">
                                        <h3 class="timeline-header bg-gray">
                                            <a href="/WriterPanel/WriterProfile/@item.WriterID"  >
                                                @item.Writer.WriterName @item.Writer.WriterSurName - <span class="badge bg-gradient-indigo">@item.Heading.HeadingName </span>
                                            </a>
                                            - <a href="/WriterPanelContent/DeleteContent/@item.ContentID"  style="float:right;" class="badge badge-danger text-white">Sil </a>  - <a href="/WriterPanelContent/EditContent/@item.ContentID" style="float:right;margin:auto 5px" class="badge badge-info text-white">Düzenle </a>
                                        </h3>
                                        <div class="timeline-body bg-black text-white">
                                            @item.ContentValue
                                        </div>
                                    </div>
                                </div>
                                <!-- END timeline item -->
                            }
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
            </div>
            <!-- /.timeline -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
</body>
</html>
